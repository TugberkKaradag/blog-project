
@model List<AppUser>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Kullanıcı Listesi</h3>

        <div class="card-tools">
            <ul class="pagination pagination-sm float-right">
                <li class="page-item"><a class="page-link" href="#">«</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">»</a></li>
            </ul>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table">
            <thead>
                <tr>
                  
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Kullanıcı Adı</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.UserName</td>
                        <td>@item.Statu</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-success">Güncelle</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Sil</a>
                        </td>
                        <td>
                            <a asp-action="Detail" asp-route-id="@item.ID" class="btn btn-warning">Detay</a>
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>