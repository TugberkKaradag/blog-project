@using BlogProject.Model.Enums
@using BlogProject.Web.Areas.Admin.Models.VMs;
@model List<BlogProject.Web.Areas.Admin.Models.VMs.GetArticleVM>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Makale Listesi</h3>

        <div class="card-tools">
            <ul class="pagination pagination-sm float-right">
                <li class="page-item"><a class="page-link" href="#">«</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">»</a></li>
            </ul>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table">
            <thead>
                <tr>

                    <th>Title</th>
                    <th>Content</th>
                    <th>Photo</th>
                    <th>CategoryName</th>
                    <th>UserFullName</th>
                    <th>Status</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Content.Substring(0,25)</td>
                        <td>
                            <img src="@item.ImagePath" />
                        </td>
                        <td>
                            @item.CategoryName
                        </td>
                        <td>@item.UserFullName</td>
                        <td><div>
                <label asp-for="@item.Statu">@item.Statu</label>
                
                <span asp-validation-for="@item.Statu" class="text-danger"></span>
            </div>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ArticleID" class="btn btn-success">Güncelle</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.ArticleID" class="btn btn-danger">Sil</a>
                        </td>
                        <td>
                            <a asp-action="Detail" asp-route-id="@item.ArticleID" class="btn btn-warning">Detay</a>
                        </td>
                      
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>